<div class="comment-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add comments</h1>
        <%= form_for @comment do |c| %>
          <%= c.hidden_field :topic_id, :value => @comment.topic_id %>
          <div class="form-group">
            <%= c.label :comment %>
            <%= c.text_area :comment, class: 'form-control' %>
          </div>
          
          <% if logged_in? %>
            <%= c.submit 'コメントする', class: 'btn btn-black btn-block' %>
          <% end %>

        <% end %>
      </div>
    </div>
  </div>
</div>